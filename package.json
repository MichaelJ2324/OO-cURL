{
  "private": false,
  "name": "oo-curl",
  "version": "1.0",
  "description": "An simple object oriented design for working with cURL",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "phpunit || true",
    "coverage": "phpunit --coverage-html=coverage || true",
    "doc": "phpdoc -d ./src -t ./doc/ || true",
    "quality": "phpcs --standard=./ruleset.xml src/ || true",
    "all": "npm run coverage && npm run doc && npm run quality"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/michaelj2324/oo-curl"
  },
  "bugs": {
    "url": "https://github.com/michaelj2324/oo-curl/issues"
  },
  "homepage": "https://github.com/michaelj2324/oo-curl"
}
